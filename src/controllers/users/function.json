{
  "enabled": true,
  "type": "http",
  "description": "Service to make JWT more convenient in use",
  "bindings": [
    {
      "function": "create",
      "summary": "Add new user",
      "description": "This method creates temporal users until they activate it by email",
      "method": "post",
      "route": "/user",
      "preprocess": false,
      "auth": false,
      "validate": true
    },
    {
      "function": "activate",
      "method": "get",
      "route": "/activate/:code",
      "preprocess": false,
      "auth": false,
      "validate": false
    },
    {
      "function": "login",
      "method": "post",
      "route": "/login",
      "preprocess": false,
      "auth": false,
      "validate": true
    },
    {
      "function": "refreshToken",
      "method": "get",
      "route": "/token",
      "preprocess": true,
      "auth": true,
      "validate": false
    },
    {
      "function": "jwk",
      "method": "get",
      "route": "/jwk",
      "preprocess": false,
      "auth": false,
      "validate": false
    },
    {
      "function": "read",
      "summary": "Get user by id",
      "method": "get",
      "route": "/user/:user_id",
      "preprocess": true,
      "auth": true,
      "validate": true
    },
    {
      "function": "readByEmail",
      "summary": "Get user by email",
      "method": "get",
      "route": "/user/:email",
      "preprocess": true,
      "auth": true,
      "validate": true
    },
    {
      "function": "update",
      "method": "put",
      "route": "/user",
      "preprocess": true,
      "auth": true,
      "validate": true
    },
    {
      "function": "del",
      "method": "delete",
      "route": "/user/:user_id",
      "preprocess": true,
      "auth": true,
      "validate": true
    },
    {
      "function": "list",
      "method": "get",
      "route": "/users",
      "preprocess": true,
      "auth": true,
      "validate": true,
      "postvalidate": true
    }
  ]
}
