{
  "enabled": true,
  "type": "http",
  "description": "Service to operate with users",
  "bindings": [
    {
      "function": "register",
      "summary": "Register new user",
      "description": "This method creates temporal users until they activate it by email",
      "method": "post",
      "route": "/auth/user",
      "preprocess": false,
      "auth": false,
      "validate": true
    },
    {
      "function": "activate",
      "method": "get",
      "route": "/auth/activate/:code",
      "preprocess": false,
      "auth": false,
      "validate": true
    },
    {
      "function": "login",
      "method": "post",
      "route": "/auth/login",
      "preprocess": false,
      "validate": true
    },
    {
      "function": "refreshToken",
      "method": "get",
      "route": "/auth/refresh",
      "preprocess": true,
      "auth": true,
      "validate": true
    },
    {
      "function": "read",
      "summary": "Get own user",
      "method": "get",
      "route": "/auth/user",
      "preprocess": true,
      "auth": ["registered", "admin", "manager", "operator"],
      "validate": true
    },
    {
      "function": "read",
      "summary": "Get user by id",
      "method": "get",
      "route": "/auth/user/:user_id",
      "preprocess": true,
      "auth": ["admin", "manager", "operator"],
      "validate": true
    },
    {
      "function": "update",
      "method": "put",
      "route": "/auth/user",
      "preprocess": true,
      "auth": ["registered", "admin", "manager", "operator"],
      "validate": true
    },
    {
      "function": "del",
      "method": "delete",
      "route": "/auth/user/:user_id",
      "preprocess": true,
      "auth": ["registered", "admin", "manager", "operator"],
      "validate": true
    }
  ]
}
